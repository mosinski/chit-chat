<% title "Chat" %>
<%= "Room: #{session[:room]}" if session[:room] %>

<ul class="chat" id="chat-<%= session[:room] %>">
  <%= render @messages || @room_messages %>
</ul>

<%= form_for Message.new, :remote => true do |f| %>
  <%= f.text_field :content %>
  <%= f.hidden_field :room, value: session[:room] %>
  <%= f.submit "Send" %>
<% end %>
